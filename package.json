{
  "name": "Ez",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.0.1",
    "@material-ui/icons": "^3.0.1",
    "firebase": "^5.4.2",
    "moment": "^2.22.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-waypoint": "^8.0.3",
    "redux": "^4.0.0",
    "redux-persist": "^5.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-stage-0": "^6.24.1",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "react-scripts": "1.1.5"
  },
  "scripts": {
    "build:css": "node-sass-chokidar src/ -o src/",
		"watch:css": "node-sass-chokidar src/ -o src/ --watch --recursive",
		"start:js": "react-scripts start",
		"build:js": "react-scripts build",
		"start": "npm-run-all -p build:css watch:css start:js",
		"build": "npm-run-all -p build:css build:js",
    "start-lan": "npm-run-all -p babel compile",
    "deploy": "yarn build && firebase deploy",
    "babel": "rm -rf compiled && cp -R compiling compiled && babel compiled compiled",
    "compile": "node compiled/compiler.js helloWorld.ez",
    "items": "node items/index.js"
  }
}
